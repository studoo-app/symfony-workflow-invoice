                    {% endif %}
                    {% if workflow_can(invoice, 'to_send') %}
                        <a href="{{ path('app_invoice_apply_workflow',{id:invoice.id,targetStatus:'to_send'}) }}" class="btn btn-secondary">Envoyer</a>
                    {% endif %}
                    {% if workflow_can(invoice, 'to_paid') %}
